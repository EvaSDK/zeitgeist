NULL = 

ACLOCAL_AMFLAGS = -I m4 ${ACLOCAL_FLAGS}

SUBDIRS = \
	libzeitgeist \
	src \
	extensions \
	data \
	python \
	test \
	examples \
	po \
	doc \
	$(NULL)

zeitgeistdocdir = $(pkgsharedir)/doc
zeitgeistdoc_DATA = \
	AUTHORS \
	NEWS \
	$(NULL)

DISTCHECK_CONFIGURE_FLAGS = \
	--with-session-bus-services-dir="\$(datadir)"/dbus-1/services \
	--enable-gtk-doc

EXTRA_DIST = \
	$(zeitgeistdoc_DATA) \
	INSTALL \
	COPYING \
	COPYING.GPL \
	ChangeLog \
	config.vapi \
	$(NULL)

run: all
	./src/zeitgeist-daemon

debug: all
	gdb ./src/zeitgeist-daemon

test-dbus: all
	./test/dbus/run-all-tests.py

test-direct: all
	cd ./test/direct/ && make run;

test-c: all
	cd ./test/c/ && make run;
